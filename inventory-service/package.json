{
  "name": "inventory-service",
  "version": "1.0.0",
  "description": "Inventory management microservice for e-commerce platform",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && npm run db:migrate && npm run db:seed && node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' NODE_ENV=test jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' NODE_ENV=test jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' NODE_ENV=test jest --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node migrate.js",
    "db:seed": "node dist/db/seed.js"
  },
  "dependencies": {
    "@jest/globals": "^30.0.5",
    "amqplib": "^0.10.3",
    "drizzle-orm": "^0.29.1",
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.1",
    "postgres": "^3.4.3"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.10",
    "@types/supertest": "^2.0.16",
    "drizzle-kit": "^0.20.4",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.1.2",
    "typescript": "^5.2.2"
  }
}
