{
  "name": "sales-service",
  "version": "1.0.0",
  "description": "Sales microservice with Fastify and TypeScript",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && npm run db:migrate && node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "node migrate.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/type-provider-json-schema-to-ts": "^3.0.0",
    "json-schema-to-ts": "^3.0.1",
    "drizzle-orm": "^0.29.0",
    "postgres": "^3.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2",
    "tsx": "^3.14.0",
    "drizzle-kit": "^0.20.4"
  },
  "private": true
}
